{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"Firestone",
		"author":"SÃ©bastien Tromp",
		"version":"0.9.6",
		"minimum-overwolf-version":"0.107.240.0",
		"access-name": "com.zerotoheroes.overwolf.hs.firestone",
		"description":"A Hearthtone companion to have in-game the information you want to know about your card collection and more",
		"dock_button_title": "Firestone",
		"icon":"IconStore.png",
		"icon_gray":"IconStore.png",
		"launcher_icon": "launcher_icon.ico",
		"store_icon": "IconStore.png"
	},
	"permissions": [
		"Logging",
		"GameInfo",
		"FileSystem",
		"Extensions",
		"Profile",
		"Hotkeys",
        "Streaming"
	],
	"disable_dockbutton": false,
	"hide_from_store": false,
	"data": {
		"start_window":"MainWindow",
		"windows": {
			"MainWindow": {
				"file": "Files/html/background.html",
				"transparent": true,
				"clickthrough": true,
				"resizable": false,
				"show_in_taskbar": false,
				"is_background_page": true,
				"size": {"width": 0, "height": 0},
				"start_position": {"top": 0, "left": 0},
                "grab_keyboard_focus": false,
                "grab_focus_on_desktop": false,
                "block_top_window_navigation": true
			},
			"LoadingWindow": {
				"file": "Files/html/loading.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
		        "size": {"width": 450, "height": 590},
		        "min_size": {"width": 440, "height": 580},
		        "max_size": {"width": 440, "height": 580},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			},
			"NotificationsWindow": {
				"file": "Files/html/notifications.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": {"width": 530, "height": 500},
				"start_position": {"top": 0, "left": 0},
                "grab_keyboard_focus": false,
                "grab_focus_on_desktop": false,
                "block_top_window_navigation": true
			},
			"ErrorsWindow": {
				"file": "Files/html/errors.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
		        "size": {"width": 600, "height": 200},
		        "min_size": {"width": 600, "height": 200},
		        "max_size": {"width": 600, "height": 200},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			},
			"WelcomeWindow": {
				"file": "Files/html/welcome.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
		        "size": {"width": 1044, "height": 660},
		        "min_size": {"width": 1044, "height": 660},
		        "max_size": {"width": 1044, "height": 660},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			},
			"CollectionWindow": {
				"file": "Files/html/collection.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": true,
		        "size": {"width": 1150, "height": 700},
		        "min_size": {"width": 1150, "height": 700},
		        "max_size": {"width": 1150, "height": 700},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			}
		},
		"game_targeting": {
		  "type": "dedicated",
		  "game_ids": [9898]
		},
		"force_browser": "user",
		"game_events": ["9898"],
		"launch_events": [
			{
				"event": "GameLaunch",
				"event_data": {
					"game_ids": [9898]
				},
				"start_minimized": false
			}
		],
	    "protocol_override_domains" : {
	    	"googlesyndication" : "http"
	   	},
		"externally_connectable": {
			"matches": [
				"http://www.zerotoheroes.com",
				"https://www.googletagmanager.com",
				"https://*.zam.com"
			]
		},
		"extra-objects": {
			"simple-io-plugin-zip": {
				"file": "Files/plugins/simple-io-plugin-zip.dll",
				"class": "overwolf.plugins.SimpleIOPluginZip"
			},
			"mindvision": {
				"file": "Files/plugins/MindVision.dll",
				"class": "MindVision.MindVisionPlugin"
			}
		},
		"hotkeys": {
			"collection": {
				"title": "Show/hide collection window",
				"action-type": "custom",
				"default": "Alt+C"
			}
		}
	}
}
