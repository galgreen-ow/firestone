{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"HS Collection Companion",
		"author":"SÃ©bastien Tromp",
		"version":"0.0.4",
		"minimum-overwolf-version":"0.107.240.0",
		"access-name": "com.zerotoheroes.overwolf.hs.librarian",
		"description":"A collection companion to have in-game the information you want to know",
		"dock_button_title": "HS Collection Companion",
		"icon":"IconStore.png",
		"icon_gray":"IconStore.png",
		"store_icon": "IconStore.png"
	},
	"permissions": ["Logging", "GameInfo", "FileSystem", "Extensions", "Profile", "Hotkeys"],
	"disable_dockbutton": false,
	"hide_from_store": false,
	"data": {
		"start_window":"MainWindow",
		"windows": {
			"MainWindow": {
				"file": "Files/html/background.html",
				"transparent": true,
				"clickthrough": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": {"width": 0, "height": 0},
				"start_position": {"top": 0, "left": 0},
                "grab_keyboard_focus": false,
                "grab_focus_on_desktop": false,
                "block_top_window_navigation": true
			},
			"NotificationsWindow": {
				"file": "Files/html/notifications.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
				"size": {"width": 400, "height": 500},
				"start_position": {"top": 0, "left": 0},
                "grab_keyboard_focus": false,
                "grab_focus_on_desktop": false,
                "block_top_window_navigation": true
			},
			"ErrorsWindow": {
				"file": "Files/html/errors.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
		        "size": {"width": 600, "height": 200},
		        "min_size": {"width": 600, "height": 200},
		        "max_size": {"width": 600, "height": 200},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			},
			"WelcomeWindow": {
				"file": "Files/html/welcome.html",
				"transparent": true,
				"resizable": false,
				"show_in_taskbar": false,
		        "size": {"width": 1316, "height": 787},
		        "min_size": {"width": 1316, "height": 787},
		        "max_size": {"width": 1316, "height": 787},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			},
			"CollectionWindow": {
				"file": "Files/html/collection.html",
				"transparent": true,
				"resizable": true,
				"show_in_taskbar": false,
		        "size": {"width": 1100, "height": 787},
		        "min_size": {"width": 1100, "height": 787},
		        "block_top_window_navigation": true,
		        "popup_blocker": true,
		        "mute": true
			}
		},
		"force_browser": "user",
		"game_events": ["9898"],
		"launch_events": [
			{
				"event": "GameLaunch",
				"event_data": {
					"game_ids": [9898]
				},
				"start_minimized": false
			}
		],
		"externally_connectable": {
			"matches": [
				"http://www.zerotoheroes.com",
				"https://www.googletagmanager.com"
			]
		},
		"extra-objects": {
			"simple-io-plugin-zip": {
				"file": "Files/plugins/simple-io-plugin-zip.dll",
				"class": "overwolf.plugins.SimpleIOPluginZip"
			},
			"mindvision": {
				"file": "Files/plugins/MindVision.dll",
				"class": "MindVision.MindVisionPlugin"
			}
		},
		"hotkeys": {
			"collection": {
				"title": "Show/hide collection window",
				"action-type": "custom",
				"default": "Alt+C"
			}
		}
	}
}
